<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký người dùng</title>
	<link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <div class="login-form">
    <!-- <div class="register-form_container">
        <div class="overlay"></div>
        <div class="register-form"> -->
            <h1>Đăng ký người dùng</h1>
            <form action="/register" method="POST">
                <label>Họ:</label>
                <input type="text" name="firstName" placeholder="Nhập Họ" 
                    <% if (typeof name != "undefined" && name) { %> value="<%= firstName %>"<% } %> required>
                <label>Tên:</label>
                <input type="text" name="lastName" placeholder="Nhập Tên" 
                    <% if (typeof name != "undefined" && name) { %> value="<%= lastName %>"<% } %> required>   
                <label>Email:</label> 
                <input type="text" name="email" placeholder="Nhập Email" 
                    <% if (typeof email != "undefined" && email) { %> value="<%= email %>"<% } %>  required>
                <label>Mật khẩu:</label>
                <input type="password" name="password" placeholder="Nhập Mật khẩu" 
                    <% if (typeof password != "undefined" && password) { %> value="<%= password %>"<% } %> required>
                
                <% if (typeof conflictError != "undefined" && conflictError) { %>
                    <div class="text-danger text-left  mb-3"><%= conflictError %></div>
                <% } %>
                <button type="submit" class="button3">Đăng Ký</button>
                <label>Bạn đã có tài khoản ?</label>
                <a href="/login">Đăng nhập</a>
            </form>
        <!-- </div>
    </div> -->
    </div>
</body>
</html>